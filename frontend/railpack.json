{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "...",
        {
          "cmd": "npm install --legacy-peer-deps --prefer-offline --no-audit --no-fund",
          "customName": "Install dependencies with legacy peer deps"
        }
      ],
      "caches": ["npm-cache"]
    }
  },
  "caches": {
    "npm-cache": {
      "directory": "/root/.npm",
      "type": "shared"
    }
  }
}

