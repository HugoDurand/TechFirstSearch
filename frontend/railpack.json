{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "inputs": [
        {
          "local": true,
          "include": ["package.json", "package-lock.json"]
        }
      ],
      "commands": [
        {
          "cmd": "npm install --legacy-peer-deps --prefer-offline --no-audit --no-fund",
          "customName": "Install dependencies"
        }
      ],
      "caches": ["npm-cache"]
    },
    "build": {
      "inputs": [
        {
          "step": "install"
        },
        {
          "local": true,
          "include": ["."]
        }
      ],
      "commands": [
        {
          "cmd": "npm run build:web",
          "customName": "Build web application"
        }
      ]
    }
  },
  "caches": {
    "npm-cache": {
      "directory": "/root/.npm",
      "type": "shared"
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "build",
        "include": ["web-build"]
      }
    ],
    "startCommand": "npm run start"
  }
}

