{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        {
          "src": "package.json",
          "dest": "package.json"
        },
        {
          "src": "package-lock.json",
          "dest": "package-lock.json"
        },
        {
          "cmd": "npm install --legacy-peer-deps --prefer-offline --no-audit --no-fund",
          "customName": "Install dependencies"
        }
      ],
      "caches": ["npm-cache"]
    },
    "build": {
      "commands": [
        "...",
        {
          "cmd": "npm run build:web",
          "customName": "Build static web app"
        }
      ]
    }
  },
  "caches": {
    "npm-cache": {
      "directory": "/root/.npm",
      "type": "shared"
    }
  },
  "deploy": {
    "inputs": [
      "...",
      {
        "step": "build",
        "include": ["web-build"]
      }
    ],
    "startCommand": "npx serve web-build -s -l $PORT"
  }
}

